programa {
    funcao inicio(){
        // Declaração de variáveis
        real nota1, nota2, media
        
        // Entrada de dados
        escreva("Informe as duas notas:")
        leia(nota1, nota2)
        
        // Processamento de dados
        media = (nota1 + nota2) / 2
        
        // Saída de dados
        escreva("A média das notas é ", media)
        se (media >= 7) {
            escreva(" e o aluno foi aprovado.")
        }
        senao {
            escreva(" e o aluno foi reprovado.")
        }
    }
}
