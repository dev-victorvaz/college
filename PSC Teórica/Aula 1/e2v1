programa {
    funcao inicio(){
        // Receber o valor de produto conforme a forma de pagamento. A forma de pagamento igual a “boleto” tem 10% de desconto.
        // Declaração de variáveis
        real valorProduto
        cadeia formaPagamento
        
        // Entrada de dados
        escreva("Informe o valor do produto: ")
        leia(valorProduto)
        escreva("Informe a forma de pagamento: ")
        leia(formaPagamento)
        
        // Processamento de dados e saída de dados
        se(formaPagamento == "boleto") {
            valorProduto = valorProduto * 0.9
            escreva("O valor do produto com desconto é ", valorProduto, ".")
        }
        senao {
            escreva("O valor do produto sem desconto é ", valorProduto, ".")
        }
    }
}
